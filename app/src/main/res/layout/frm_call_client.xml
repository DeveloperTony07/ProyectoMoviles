<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/dark_blue"
    tools:context=".view.fragments.frm_Call_Client">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_client_content"
            android:textAlignment="center"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/large_margin"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/commun_margin" />

        <ListView
            android:id="@+id/listVwClientContact"
            android:layout_width="match_parent"
            android:layout_height="486dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/commun_margin" />

        <Button
            android:id="@+id/btnBackClientContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_back"
            app:cornerRadius="5dp"
            android:layout_marginEnd="@dimen/marginx_bottons"
            android:layout_marginStart="@dimen/marginx_bottons"
            android:backgroundTint="@color/dark_blue"/>
    </LinearLayout>

</FrameLayout>